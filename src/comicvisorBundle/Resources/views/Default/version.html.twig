{% endblock %}

{% block scripts %}  

<script>
    
    function Cambiar(num)
    {
        if(num==1)
        {
        window.location.href = ""+$("select[id=select1]").val();+"";
        }
        else
        {
        window.location.href = ""+$("select[id=select2]").val();+"";
        }
    }
</script>
{% endblock %}