{% extends '::plantilla1.html.twig' %} 

{% block title%}ComicVisor{% endblock %}

 {% block body %}
 
 <a href="{{pagina-1}}" class="flecha" ><div class="card col-xs-1 "><span class="ion-chevron-left center-block">  </span></div></a>
 
 <div class="card col-xs-10 text-center">
     <select id="select1" onchange="Cambiar(1)" class="center-block lista">
     {% for i in 1..paginas.numeroPag %}
        {% if i == pagina %}
            <option value="{{i}}" selected="selected">{{i}}</option>
        {% else %}
            <option value="{{i}}">{{i}}</option>
        {% endif %}
    {% endfor %}
    </select>
 </div>
 <a href="{{pagina+1}}" class="flecha"><div class="card col-xs-1 "><span class="ion-chevron-right center-block">  </span></div></a>
 
 
 <div class="card col-xs-12"></div>
 
 <a href="{{pagina-1}}" class="flecha"><div class="card col-xs-1"><span class="ion-chevron-left center-block">  </span></div></a>
  
 <div class="card col-xs-10">
     <select id="select2" onchange="Cambiar(2)" class="center-block lista">
     {% for i in 1..paginas.numeroPag %}
        {% if i == pagina %}
            <option value="{{i}}" selected="selected">{{i}}</option>
        {% else %}
            <option value="{{i}}">{{i}}</option>
        {% endif %}
    {% endfor %}
    </select>
 </div>
 
  <a href="{{pagina+1}}" class="flecha"><div class="card col-xs-1"><span class="ion-chevron-right center-block">  </span></div></a>
 
 {% endblock %}

