{% block scripts %}  

<script>
    $('#vot').hide();
    function Cambiar(num)
    {
        if(num==1)
        {
          $('#vot').hide(700);
          $('#pop').show(700);
        }
        else
        {
          $('#pop').hide(700);
          $('#vot').show(700);
        }
    }
</script>
