{% block scripts %}
<script>

function Cargar()
{
    var id = $("select[id=selectcomic]").val();
    $('#selectcapitulo').load('/web/cargaDatos2/'+id);
 
}

function Cambiar(num)
{
    if(num == 1)
    {
        $('#form1').show();
        $('#form2').hide();
        $('#form3').hide();
    
    }
    
    if(num == 2)
    {
        $('#form1').hide();
        $('#form2').show();
        $('#form3').hide();
    
    }
    
    if(num == 3)
    {
        $('#form1').hide();
        $('#form2').hide();
        $('#form3').show();
    
    }
}

$(document).ready(function(){
    $('#selectcomic').load('/web/cargaDatos1');
    $('#selectcomic2').load('/web/cargaDatos1');
    $('#categoria').load('/web/cargaDatos3');
    $('#form2').hide();
    $('#form3').hide();
    {% if app.session.get('tipo') != "admin" %}
    $('#boton1').hide();
    $('#boton2').hide();
    $('#boton3').hide();
    {% endif %}
    Cargar();
    });


</script>
